{
  "manifest_version": 3,
  "name": "OSM Transfer Helper",
  "version": "2.5",
  "description": "Shows the most profitable players in the OSM transfer market.",
  "permissions": ["storage", "tabs", "cookies"],
  "host_permissions": ["https://web-api.onlinesoccermanager.com/*", "https://web-api.onlinesoccermanager.nl/*"],
  "action": { "default_popup": "popup.html"},
  "background": {"service_worker": "background.js"}, 
  "content_scripts": [{ "matches": ["https://*.onlinesoccermanager.com/*", "https://*.onlinesoccermanager.nl/*"], "js": ["content.js"]}],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
